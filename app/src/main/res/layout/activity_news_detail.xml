<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/config_color_blank_3"
    android:orientation="vertical">

    <include layout="@layout/layout_detail_status"/>

    <com.wecent.weixun.widget.SimpleMultiStateView
        android:id="@+id/SimpleMultiStateView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.wecent.weixun.widget.SimpleRecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dividerColor="@color/config_color_white" />

    </com.wecent.weixun.widget.SimpleMultiStateView>

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/layout_detail_bottom" />

</LinearLayout>